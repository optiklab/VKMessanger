    <!-- Settings button style -->
    <ControlTemplate 
        x:Key="SignInButtonTemplate" 
        TargetType="Button">
        <Border 
            x:Name="BlueButtonBorder"
            BorderBrush="{StaticResource PhoneContrastBackgroundBrush}"
            Background="{StaticResource PhoneBackgroundBrush}"
            BorderThickness="4"
            Padding="0,5,0,5"
            HorizontalAlignment="Stretch">
            <vsm:VisualStateManager.VisualStateGroups>
                <vsm:VisualStateGroup x:Name="CommonStates">
                    <vsm:VisualState x:Name="Normal">
                    </vsm:VisualState>
                    <vsm:VisualState x:Name="Disabled">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                           Storyboard.TargetName="BlueButtonBorder"
                                                           Storyboard.TargetProperty="(UIElement.Background)">
                                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="Gray" />
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </vsm:VisualState>
                    <vsm:VisualState x:Name="Pressed">
                        <Storyboard>
                            <ObjectAnimationUsingKeyFrames BeginTime="00:00:00"
                                                           Storyboard.TargetName="BlueButtonBorder"
                                                           Storyboard.TargetProperty="(UIElement.Background)">
                                <DiscreteObjectKeyFrame KeyTime="00:00:00.1000000" Value="LightGray" />
                            </ObjectAnimationUsingKeyFrames>
                        </Storyboard>
                    </vsm:VisualState>
                </vsm:VisualStateGroup>
            </vsm:VisualStateManager.VisualStateGroups>
            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center">
            </ContentPresenter>
        </Border>
    </ControlTemplate>


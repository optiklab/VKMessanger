    <Style x:Key="ListBoxMore" TargetType="ListBox">
        <Setter Property="Background" Value="Transparent"/>
        <Setter Property="Foreground" Value="{StaticResource PhoneForegroundBrush}"/>
        <Setter Property="ScrollViewer.HorizontalScrollBarVisibility" Value="Disabled"/>
        <Setter Property="ScrollViewer.VerticalScrollBarVisibility" Value="Auto"/>
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="BorderBrush" Value="Transparent"/>
        <Setter Property="Padding" Value="0"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="ListBox">
                    <ScrollViewer x:Name="ScrollViewer" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}" Background="{TemplateBinding Background}" Foreground="{TemplateBinding Foreground}" Padding="{TemplateBinding Padding}">
                        <StackPanel>
                            <StackPanel.Resources>
                                <local:IntToVisibilityConverter x:Key="integerToVisibilityConverter"/>
                            </StackPanel.Resources>
                            <ItemsPresenter/>
                            <TextBlock
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center"
                                x:Name="LoadMoreLabel"
                                Text="{Binding Path=LocalizedResources.LoadMoreLabel, Source={StaticResource LocalizedStrings}}"
                                Foreground="{StaticResource GrayColorBrush}"
                                FontSize="30"
                                Visibility="{Binding ElementName=DialogsPanel, Path=Items.Count, Converter={StaticResource integerToVisibilityConverter}}">
                            </TextBlock>
                        </StackPanel>
                    </ScrollViewer>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>

